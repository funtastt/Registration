<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.market.MarketFragment">

    <TextView
        android:id="@+id/market_page_user_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/your_balance"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/market_page_user_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/market_page_user_balance_text"
        android:text="balance"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/market_page_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_page_user_balance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/current_date"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/market_page_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_page_user_balance"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/market_page_date_text"
        android:text="date"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/market_page_bonds_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_page_date_text"
        android:layout_alignParentStart="true"

        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Bonds"
        android:textColor="#000"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/securitiesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/market_page_bonds_textView"
        android:layout_marginTop="44dp"
        tools:listitem="@layout/list_bond_layout" />
</RelativeLayout>